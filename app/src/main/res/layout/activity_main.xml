<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<com.gao.jiefly.abilitychartlibrary.AbilityChatView
			android:id="@+id/ability1"
			android:layout_width="match_parent"
			android:layout_height="300dp"
			custom:coverAlpha="100"
			custom:coverColor="#0ff"
			custom:lineColor="#75082d"
			custom:polygonAlpha="23"
			custom:textColor="#000"
			custom:textSize="5sp"/>
		<com.gao.jiefly.abilitychartlibrary.AbilityChatView
			android:id="@+id/ability2"
			android:layout_width="match_parent"
			android:layout_height="300dp"
			custom:coverAlpha="100"
			custom:coverColor="#0ff"
			custom:lineColor="#75082d"
			custom:polygonAlpha="123"
			custom:textColor="#000"
			custom:textSize="5sp"
		/>

		<com.gao.jiefly.abilitychartlibrary.AbilityChatView
			android:id="@+id/ability3"
			android:layout_width="match_parent"
			android:layout_height="300dp"
			custom:coverAlpha="100"
			custom:coverColor="#ff0000"
			custom:lineColor="#75082d"
			custom:lineWidth="0.2dp"
			custom:polygonAlpha="23"
			custom:textColor="#000"
			custom:textSize="3sp"
		/>
		<com.gao.jiefly.abilitychartlibrary.AbilityChatView
			android:id="@+id/ability4"
			android:layout_width="match_parent"
			android:layout_height="300dp"
			custom:coverAlpha="100"
			custom:coverColor="#0ff"
			custom:lineColor="#75082d"
			custom:polygonAlpha="23"
			custom:textColor="#000"
			custom:textSize="5sp"/>
		<com.gao.jiefly.abilitychartlibrary.AbilityChatView
			android:id="@+id/ability5"
			android:layout_width="match_parent"
			android:layout_height="300dp"
			custom:coverAlpha="100"
			custom:coverColor="#0ff"
			custom:lineColor="#75082d"
			custom:polygonAlpha="123"
			custom:textColor="#000"
			custom:textSize="6sp"
		/>
		<com.gao.jiefly.abilitychartlibrary.AbilityChatView
			android:id="@+id/ability6"
			android:layout_width="match_parent"
			android:layout_height="300dp"
			custom:coverAlpha="100"
			custom:coverColor="#ff0000"
			custom:lineColor="#75082d"
			custom:lineWidth="0.2dp"
			custom:polygonAlpha="23"
			custom:textColor="#000"
			custom:textSize="6sp"
		/>
	</LinearLayout>
</ScrollView>
